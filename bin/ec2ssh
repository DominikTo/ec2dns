#!/bin/bash

 # ec2ssh
 #
 # @copyright Copyright (C) 2012 fruux GmbH. All rights reserved.
 # @author Dominik Tobschall (http://fruux.com/)

 #
 # Find script path
 #
SOURCE="${BASH_SOURCE[0]}"
DIR="$( dirname "$SOURCE" )"
while [ -h "$SOURCE" ]
do
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
  DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd )"
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

 #
 # Hand arguments to ec2dnshelper if we have any
 #
if [ "$#" -ge 1 ]; then
    sshArguments=$($DIR/ec2dnshelper $@)
else
    sshArguments=""
fi

 #
 # Set fancyPrompt
 # @TODO: We have to know if a tag was replaced at all and we need the name of the tag that was replaced.
 #
fancyPrompt="echo \\\". ~/.bashrc && PS1='\[\e]0;tag-name: \w\\\a\]\[\\\033[01;32m\]tag-name\[\\\033[00m\]:\[\\\033[01;34m\]\w\[\\\033[00m\]\\\$ '\\\" > ~/.ec2dnsrc; /bin/bash --rcfile .ec2dnsrc -i"

 #
 # run ssh
 #
#ssh -t $sshArguments \"$fancyPrompt\"
